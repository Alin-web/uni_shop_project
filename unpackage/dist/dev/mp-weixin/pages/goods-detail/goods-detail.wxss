.box1 {
  padding: 10rpx;
  border-bottom: 1px solid #ccc;
}
.box1 .price {
  font-size: 35rpx;
  color: #b50e30;
  line-height: 60rpx;
}
.box1 .price text:nth-child(2) {
  font-size: 25rpx;
  color: #ccc;
  text-decoration: line-through;
  margin-left: 20rpx;
}
.box1 .title {
  font-size: 32rpx;
  line-height: 60rpx;
}
